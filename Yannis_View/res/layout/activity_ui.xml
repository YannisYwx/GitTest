<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ruler="http://schemas.android.com/apk/res/com.yannis.android.ui"
    xmlns:ts="http://schemas.android.com/apk/res/com.yannis.android.ui"
    xmlns:circle="http://schemas.android.com/apk/res/com.yannis.android.ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    tools:context=".MainActivity" >

    <!--
         <com.yannis.android.ui.widget.RulerView
        android:id="@+id/ui_rulerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:padding="25dp"
